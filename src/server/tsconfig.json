{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "../../dist/server",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "paths": {
      "@/*": ["./*"],
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
}
